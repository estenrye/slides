DEFAULT http_preseed
LABEL live
  menu label ^Start or install Ubuntu Remix
  kernel /casper/vmlinuz
  append systemd.unit=multi-user.target boot=casper initrd=/casper/initrd.lz quiet --
LABEL http_preseed
  menu label ^Install Ubuntu Server - HTTP Preseed
  kernel /casper/vmlinuz
  append   initrd=/casper/initrd quiet  --- autoinstall ds=nocloud;s=/cdrom/nocloud/
LABEL check
  menu label ^Check CD for defects
  kernel /casper/vmlinuz
  append  boot=casper integrity-check initrd=/casper/initrd.lz quiet splash --
LABEL memtest
  menu label ^Memory test
  kernel /install/memtest
  append -
LABEL hd
  menu label ^Boot from first hard disk
  localboot 0x80
  append -
DISPLAY isolinux.txt
TIMEOUT 30
PROMPT 1

#prompt flag_val
